@model ErrorViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Błąd - Projekt_Semestralny</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
<div class="container">
    <div class="text-center mt-5">
        <h1 class="display-4 text-danger">Wystąpił błąd</h1>
        <p class="lead">Przepraszamy, ale coś poszło nie tak.</p>
        @if (Model?.RequestId != null)
        {
            <p class="text-muted">ID zgłoszenia błędu: <code>@Model.RequestId</code></p>
        }
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Powrót na stronę główną</a>
    </div>
</div>
</body>
</html>
