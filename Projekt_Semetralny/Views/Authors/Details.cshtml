@model Author

<h2>Szczegóły autora</h2>

<div>
    <h4>Autor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Imię i nazwisko</dt>
        <dd class="col-sm-10">@Model.AuthorName</dd>

        <dt class="col-sm-2">Książki</dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var book in Model.BookAuthors.Select(ba => ba.Book))
                {
                    <li>@book.Title</li>
                }
            </ul>
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.AuthorId" class="btn btn-primary">Edytuj</a>
    <a asp-action="Index" class="btn btn-secondary">Powrót</a>
</div>